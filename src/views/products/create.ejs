<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head.ejs') %>
<body>
<%- include('../partials/header.ejs') %>
<main>
    <h2>Creación de productos</h2>
    <form action="/products/create" method="POST">
        <fieldset>
            <label for="product-name">Nombre del producto</label>
            <input name="nombre" type="text" id="product-name">
        </fieldset>
        <fieldset>
            <label for="product-description">Descripcion del producto</label>
            <input name="descripcion" type="text" id="product-description">
        </fieldset>
        <fieldset>
            <label for="product-image">Imagen del producto</label>
            <input name="imagen" type="image" id="product-image">
        </fieldset>
        <fieldset>
            <label for="product-category">Categoría del producto</label>
            <select name="categoria" id="product-category">
                <option value="1">Perros</option>
                <option value="2">Gatos</option>
                <option value="3">Ambos</option>
            </select>
        </fieldset>
        <fieldset>
            <label for="product-price">Precio del producto</label>
            <input name="precio" type="number" id="product-price">
        </fieldset>
        <button type="submit">CREAR</button>
    </form>
</main>
<%- include('../partials/footer.ejs') %>
</body>
</html>